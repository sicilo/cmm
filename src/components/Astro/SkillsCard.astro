---
import type { Technology } from "../../interfaces/technology.interfaces";

interface Props {
    technology: Technology;
}

const technology = Astro.props.technology;
---

<aside
    class="transition ease-in-out delay-90 hover:-translate-y-1 hover:scale-105 flex py-4 border-2 bg-slate-600 border-slate-500 mb-6 rounded-md  m-auto hover:shadow-pink-500/30 hover:shadow-md"
>
    <aside class="basis-1/5 grow">
        <img
            src={technology.image.src}
            alt={technology.name}
            width="100"
            class="m-auto"
        />
    </aside>
    <aside class="basis-3/5 grow">
        <h2 class="font-mono text-slate-200 text-3xl mb-4">
            {technology.name}
            <span
                class:list={[
                    "py-1 px-2 rounded-md text-base",
                    {
                        "bg-blue-600": technology.category == "backend",
                        "bg-green-600": technology.category == "frontend",
                        "bg-yellow-600": technology.category == "databases",
                    },
                ]}>{technology.category}</span
            >
        </h2>
        <p class="font-mono text-slate-200">
            {technology.description}
        </p>
    </aside>
</aside>
