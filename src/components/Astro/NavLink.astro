---
interface Props {
    text: string;
    href: string;
}
---

<a
    href={Astro.props.href}
    class="bg-slate-800 transition ease-in-out delay-90 hover:-translate-y-1 hover:scale-110 mx-2 shadow-md hover:shadow-lg rounded-md border-2 border-pink-500 hover:border-violet-500 py-2 px-4 flex justify-between items-center hover:bg-gradient-to-r from-pink-500 to-violet-500"
>
    <p class="font-mono text-3xl text-pink-500 hover:text-slate-200">
        <slot/>
        {Astro.props.text}
    </p>
</a>
