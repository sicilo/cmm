---
import Layout from "../layout/Layout.astro";

import vueLogo from "../public/assets/svg/vue.svg";
import angularLogo from "../public/assets/svg/angular.svg";
import netLogo from "../public/assets/svg/net.svg";

interface Technology {
    name: string;
    category: string;
    image: ImageMetadata;
    description: string;
}

const technologies: Technology[] = [
    {
        name: "Net",
        category: "backend",
        image: netLogo,
        description:
            "jdlñas jlkdfjsldfjaldjgprjonnvaoror jaioirnda fji isadfiortugiudsafn difas",
    },
    {
        name: "Vue",
        category: "frontend",
        image: vueLogo,
        description:
            "jdlñas jlkdfjsldfjaldjgprjonnvaoror jaioirnda fji isadfiortugiudsafn difas",
    },
    {
        name: "Angular",
        category: "frontend",
        image: angularLogo,
        description:
            "jdlñas jlkdfjsldfjaldjgprjonnvaoror jaioirnda fji isadfiortugiudsafn difas",
    },
];
---

<Layout>
    <section class="bg-slate-800 w-full py-8">
        <section class="container w-1/2 m-auto mt-8">
            <h1 class="font-mono text-5xl text-slate-200 font-bold">
                Technical skills
            </h1>

            <hr class="border border-b-2 border-pink-500 my-4 shadow-lg" />

            {
                technologies.map((technology) => (
                    <aside class="flex py-4 border-2 bg-slate-600 border-slate-500 mb-6 rounded-md w-3/4 m-auto hover:shadow-pink-500/30 hover:shadow-md">
                        <aside class="basis-1/5 grow">
                            <img
                                src={technology.image.src}
                                alt={technology.name}
                                width="100"
                                class="m-auto"
                            />
                        </aside>
                        <aside class="basis-3/5 grow">
                            <h2 class="font-mono text-slate-200 text-3xl mb-4">
                                {technology.name} <span class:list={[
                                    "py-1 px-1 rounded-md text-base",
                                    {
                                        'bg-blue-500':technology.category == 'backend',
                                        'bg-green-500':technology.category == 'frontend',
                                    }
                                ]}>{technology.category}</span>
                            </h2>
                            <p class="font-mono text-slate-200">
                                {technology.description}
                            </p>
                        </aside>
                    </aside>
                ))
            }
        </section>
    </section>
</Layout>
